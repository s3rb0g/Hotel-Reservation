@model List<HotelReservationSystem.Models.ImageInfo>

@{
    ViewData["Title"] = "Rooms";
}

<h1>Rooms Available</h1>

<div class="rooms-container">
    @foreach (var imageInfo in Model)
    {
        <div class="room">
            <img src="@imageInfo.RelativePath" alt="Room Image" /><br />
            <label>@imageInfo.FileNameWithoutExtension</label>
        </div>
    }
</div>

<style>
    body {
        background-color: burlywood;
    }

    .rooms-container {
        display: flex;
        flex-wrap: wrap;
        margin-left: 50px;
    }

    .room {
        margin: 10px;
        text-align: center;
        padding: 10px;
    }

    .room img {
        width: 200px;
        height: 200px;
        object-fit: cover;
    }
</style>